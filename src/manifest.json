{
    "name": "Java Doc Highlighter",
    "description": "Automatically Highlights Java Documentations",
    "version": "1.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "@mozilla-sanz-javadochighlighter",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_scripts": [
        {
            "css": [
                "css/prism-one-light.css",
                "css/prism-one-dark.css"
            ],
            "js": [
                "scripts/prism.min.js",
                "scripts/prism-java.min.js",
                "scripts/script.js"
            ],
            "matches": [
                "https://docs.oracle.com/*"
            ]
        }
    ]
}